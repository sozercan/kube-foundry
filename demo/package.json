{
  "name": "kubefoundry-demo",
  "version": "1.0.0",
  "description": "Automated demo system for KubeFoundry",
  "type": "module",
  "scripts": {
    "start": "bun run run-demo.ts",
    "cli-only": "bun run run-demo.ts --cli-only",
    "ui-only": "bun run run-demo.ts --ui-only",
    "fast": "bun run run-demo.ts --fast",
    "fast-ui": "bun run run-demo.ts --ui-only --fast",
    "narration-only": "bun run run-demo.ts --narration-only",
    "setup": "bun install && npx playwright install chromium"
  },
  "dependencies": {
    "playwright": "^1.40.0",
    "openai": "^4.20.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/bun": "^1.0.0"
  }
}
